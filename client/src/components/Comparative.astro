---
import PieChart from './PieChart.astro'
---

<div class = "py-2 px-4">
  <h2 class = "text-2xl my-4 border-l border-l-2 border-gray-300 pl-2">Accumulated vs Purposes</h2>

  <PieChart />

  <div class = "flex items-center justify-evenly ">
    <div>
      <p class = "text-2xl font-bold">
        <span class = 'rounded-full bg-[#831df5] w-6 h-6 inline-block' /> Accumulated
      </p>
      <p class = "text-center text-xl font-light">300</p>
    </div>

    <div>
      <p class = "text-2xl font-bold">
        <span class = 'rounded-full bg-[#4ec4f9] w-6 h-6 inline-block' /> Purposes
      </p>
      <p class = "text-center text-xl text-light">50</p>
    </div>
  </div>
</div>
